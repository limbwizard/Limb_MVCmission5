@model Limb_MVCmission5.Views.Home.TutoringModel
@{
    ViewData["Title"] = "Tutoring Cost Calculator";
}

<h1>Tutoring Cost Calculator</h1>
<p>Calculate the cost of personalized tutoring sessions based on your skill level and desired hours of instruction.</p>

<form id="tutoringCostCalculator" novalidate>
    <div class="mb-3">
        <label for="hours">Number of Hours:</label>
        <input type="number" id="hours" name="hours" class="form-control" min="1" placeholder="Enter hours here" required>
        <div class="invalid-feedback">Please enter a positive number of hours.</div>
    </div>
    <div class="mb-3">
        <label for="level">Skill Level:</label>
        <select id="level" name="level" class="form-control" required>
            <option value="beginner">Beginner</option>
            <option value="intermediate">Intermediate</option>
            <option value="advanced">Advanced</option>
        </select>
    </div>
    <div class="mb-3">
        <label for="rate">Hourly Rate ($):</label>
        <input type="text" id="rate" name="rate" class="form-control" value="50" disabled> <!-- Assume $50/hr as an example -->
    </div>
    <button type="button" id="calculate" class="btn btn-success">Calculate Cost</button>
</form>

<div id="totalCost" class="mt-3"></div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $('#calculate').click(function () {
            var hours = $('#hours').val();
            var rate = $('#rate').val();
            var total = hours * rate;

            if (hours > 0) {
                $('#totalCost').html(`<strong>Total Cost: $${total}</strong>`);
                $('#hours').removeClass('is-invalid');
            } else {
                $('#hours').addClass('is-invalid');
            }
        });
    });
</script>

<a href="@Url.Action("Index", "Home")" class="btn btn-primary mt-3">Back to Home</a>
